<%= form_with url: searches_dogs_path, method: :post, data: { turbo: true }, html: { class: 'my-search-form' } do |form| %>
  <%= form.label :breed, "Your favourite breed" %>
  <%= form.text_field :breed, required: true %>
  <%= form.submit 'Submit', class: 'btn' %>
<% end %>

<%= turbo_frame_tag 'breed_image_result' %>
